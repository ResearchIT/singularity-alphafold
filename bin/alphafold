#!/usr/bin/bash
DB_ROOT="/work/LAS/BioDatabase/alphafold"
singularity exec --nv --pwd /opt/alphafold /opt/rit/singularity/images/alphafold/2.0.0/alphafold.sif python /opt/alphafold/run_alphafold.py --data_dir=${DB_ROOT} --preset=full_dbs --uniref90_database_path=${DB_ROOT}/uniref90/uniref90.fasta --mgnify_database_path=${DB_ROOT}/mgnify/mgy_clusters_2018_12.fa --pdb70_database_path=${DB_ROOT}/pdb70/pdb70 --bfd_database_path=${DB_ROOT}/bfd/bfd_metaclust_clu_complete_id30_c90_final_seq.sorted_opt --uniclust30_database_path=${DB_ROOT}/uniclust30/uniclust30_2018_08/uniclust30_2018_08 --template_mmcif_dir=${DB_ROOT}/pdb_mmcif/mmcif_files --obsolete_pdbs_path=${DB_ROOT}/pdb_mmcif/obsolete.dat --model_names=model_1,model_2,model_3,model_4,model_5 --max_template_date=2020-05-14 "$@"
